<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background_main"
    android:padding="32dp"
    tools:context=".MainActivity"
    android:gravity="center">

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:textColor="@color/text_primary_white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvAppLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/button_primary"
        app:cardUseCompatPadding="false">

        <ImageView
            android:id="@+id/ivAppLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/app_logo"
            android:layout_gravity="center"
            app:tint="@color/text_primary_white" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvEmailLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo Electrónico"
        android:textColor="@color/text_accent"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvEmailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/background_card"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/text_accent"
        app:strokeWidth="1dp"
        app:cardUseCompatPadding="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:hint="usuario@ejemplo.com"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_primary_white"
            android:textColorHint="@color/text_secondary"
            android:textSize="16sp"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvPasswordLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textColor="@color/text_accent"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/background_card"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/text_accent"
        app:strokeWidth="1dp"
        app:cardUseCompatPadding="false">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@android:color/transparent"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/button_secondary"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="••••••••"
                android:inputType="textPassword"
                android:minHeight="56dp"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:textColor="@color/text_primary_white"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:text="Iniciar Sesión"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_white"
        app:backgroundTint="@color/button_primary"
        app:cornerRadius="12dp"
        app:rippleColor="@color/button_pressed" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvGoogleSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/background_card"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/button_secondary"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:focusable="true"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:id="@+id/llGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/background_card">

            <ImageView
                android:id="@+id/ivGoogleIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/google_icon_logo_svgrepo_com"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/tvGoogleSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continuar con Google"
                android:textColor="@color/text_primary_white"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvRegisterLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="¿No tienes cuenta? Regístrate"
        android:textColor="@color/button_secondary"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>